<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="4dp"
        android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".root.MainActivity">
        <ImageView
                android:id="@+id/imageViewCategory"
                android:layout_width="@dimen/icon_category_size"
                android:layout_height="@dimen/icon_category_size"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/margin8"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:srcCompat="@drawable/ic_default"/>
        <TextView
                android:id="@+id/textViewCategoryName"
                style="@style/text24Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="@dimen/margin64"
                android:layout_marginTop="@dimen/margin32"
                app:layout_constraintStart_toStartOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCategory"
                tools:text="Тесты для охранников Тесты для охранников" />
        <TextView
                android:id="@+id/textViewNumTests"
                style="@style/text15Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/margin128"
                android:layout_marginTop="@dimen/margin8"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/textViewCategoryName"
                tools:text="18 Тестов(а/ов) 18 Тестов(а/ов)"/>
        <TextView
                android:id="@+id/textViewDescription"
                style="@style/text20Bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="@dimen/margin32"
                android:layout_marginTop="@dimen/margin32"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/textViewNumTests"
                tools:text="Тест на охранника 5 разряда Тест на охранника 5 разряда" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


